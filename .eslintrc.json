{
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true    
    }
  },

  "plugins": [
    "react"
  ],

  "extends": [
    "standard-jsx"
  ],

  "rules": {
    "react/jsx-no-bind": ["error", {
      "allowArrowFunctions": true,
      "allowBind": false,
      "ignoreRefs": true
    }],
    "react/no-did-update-set-state": "error",
    "react/no-unknown-property": "error",
    "react/react-in-jsx-scope": "error",
    "jsx-quotes": ["error", "prefer-double"]
  }
}